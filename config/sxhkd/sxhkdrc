#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
super + Escape
	pkill sxhkd && sxhkd

XF86MonBrightnessDown
	brillo-down

XF86MonBrightnessUp
	brillo-up

XF86AudioLowerVolume
	pulse-decrease

XF86AudioRaiseVolume
	pulse-increase

XF86AudioMute
	pulse-mute

super + Return
	kitty

super + shift + Return
	st

super + e
	kitty -e ranger

super + @space
	rofi-launcher

alt + @space
	~/.config/rofi/RofiFtw/suggest ddg

super + shift + @space
	~/.config/rofi/rofiMenu.sh

Print
	rofiMenuPrint.sh

super + b
	barSwitch.sh

super + g
	picomSwitch

super + d
	picomTrans.sh

super + shift + d
	word-lookup

super + r
	rs

super + shift + l
	i3lock -B none.jpg

super + shift + c
	xclockcat -tiecolor mediumpurple

alt + shift + p
	arandr

super + t
	tile.sh

super + shift + t
	tileBig.sh

super + o
	snap.sh left

super + p
	snap.sh right

super + m
	snap.sh center

super + a
	snap.sh tl

super + s
	snap.sh tr

super + z
	snap.sh bl

super + x
	snap.sh br

super + y
	snap.sh bl

super + equal
	move -g

super + minus
	move -s

super + shift + m
	move_windows.sh

super + w
	teleporter
